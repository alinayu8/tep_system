<%= simple_form_for(@order) do |order_form| %>
    <%= order_form.error_notification %>
    <div class="row">

        <div class="form-inputs">
            <%= order_form.input :teacher_id, collection: Teacher.alphabetical.to_a, include_blank: true %>
        </div>
    </div>

    <div class="row">
        <legend> Add item quantities here </legend>
        <%=order_form.simple_fields_for :items do |item_form| %>
            <%= render "item_fields", :f => task_form %>
        <%end %>
    </div>
    <div class="row">
        <div class="form-actions col s8">
            <%= order_form.button :submit %>
        </div>
    </div>
<% end %>