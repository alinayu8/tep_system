<div class="card">
  <div class="card-content">
    <span class="card-title">Teachers</span>
    <table class="highlight">
      <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
      </thead>
        <% for teacher in @teachers %>
          <tr>
            <td><%= link_to teacher.first_name, teacher_path(teacher) %></td>
            <td><%= link_to teacher.last_name, teacher_path(teacher) %></td>
            <td><%= teacher.email %></td>
          </tr>
        <% end %>
      <%= will_paginate @teachers, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
    </table>
  </div>
</div>