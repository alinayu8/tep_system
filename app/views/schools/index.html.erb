<div class="card">
  <div class="card-content">
    <h1>Schools</h1>

    <table class="highlight">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @schools.each do |school| %>
          <tr>
            <td><%= link_to school.name, school_path(school) %></td>
            <td><%= school.phone %></td>
          </tr>
        <% end %>
        <%= will_paginate @schools %>
      </tbody>
    </table>

    <br>
  </div>
</div>
