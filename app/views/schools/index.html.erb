<h1>Schools</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.phone %></td>
      </tr>
    <% end %>
    <%= will_paginate @schools %>
  </tbody>
</table>

<br>
