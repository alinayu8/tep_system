<div class="card">
<div class="card-content">
<h1>Teachers</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>School Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= link_to teacher.first_name, teacher_path(teacher) %></td>
        <td><%= link_to teacher.last_name, teacher_path(teacher) %></td>
        <td><%= link_to teacher.school.name, school_path(teacher.school) %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.phone %></td>
      </tr>
    <% end %>
    <%= will_paginate @teachers %>
  </tbody>
</table>

<br>
</div>
</div>