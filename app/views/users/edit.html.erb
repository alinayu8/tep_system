<div class="row">
  <div class="col s9">
    <div class="card">    
      <div class="card-content">
        <span class="card-title"> Edit User </span>
        <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <%= f.input :first_name, label_html: { class: 'active' } %>
              <%= f.input :last_name, label_html: { class: 'active' } %>
              <%= f.input :email, label_html: { class: 'active' } %>
              <%= f.input :password, label_html: { class: 'active' } %>
              <%= f.input :password_confirmation, label_html: { class: 'active' } %>
              <%= f.input :role, collection: User::ROLES, include_blank: true %>
              <%= f.input :active %>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', :back %>